<UserControl x:Class="DJClientWPF.ConditionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="115" d:DesignWidth="600">
    <Grid x:Name="GridMain" Height="115" Width="Auto" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="3" Grid.ColumnSpan="3" CornerRadius="8" BorderThickness="2"
                BorderBrush="Silver" Background="Transparent" Margin="2,2,2,2"/>
        
        <Label Content="Quantifier: " HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
        <ComboBox x:Name="ComboBoxQuantifier" Height="30" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="0,5,0,0"/>
        <xctk:IntegerUpDown x:Name="NumberPickerQuanitifier" Height="30" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="165,5,15,0" 
            Grid.Column="1" Value="1"/>
        
        <Label Content="Type: " HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" FontWeight="Bold" />
        <ComboBox x:Name="ComboBoxType" Height="30" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"
                  Grid.ColumnSpan="2" SelectionChanged="ComboBoxType_SelectionChanged"/>
        <controls:AutoCompleteBox x:Name="TextBoxTypeValue" Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="165,0,15,0"
                  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Populating="TextBoxTypeValue_Populating"/>
        
        <Label Content="Date: " HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" FontWeight="Bold"/>
        <CheckBox Content="Start Date:" x:Name="CheckBoxDateStart" Checked="CheckBoxDateStart_Checked" VerticalAlignment="Center"
                  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"/>
        <DatePicker x:Name="DatePickerStart" Margin="80,0,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"
                  IsEnabled="False"/>
        <CheckBox Content="End Date:" x:Name="CheckBoxDateEnd" Checked="CheckBoxDateEnd_Checked" Margin="0,0,0,0" VerticalAlignment="Center"
                  Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left"/>
        <DatePicker x:Name="DatePickerEnd" Margin="75,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="2"
                    DisplayDateStart="{Binding ElementName=DatePickerStart, Path=SelectedDate}" IsEnabled="False"/>
        <CheckBox Content="CheckBox" Grid.Row="2" Height="16" HorizontalAlignment="Left" Margin="-178,80,0,0" Name="checkBox1" VerticalAlignment="Top" />
    </Grid>
</UserControl>
