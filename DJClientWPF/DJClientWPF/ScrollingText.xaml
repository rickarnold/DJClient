<UserControl x:Class="DJClientWPF.ScrollingText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="600">
    <Canvas x:Name="GridMain" Height="Auto" Width="Auto" Background="Black">
        <TextBlock Margin="0,5,0,5" Foreground="White" x:Name="TextBlockMarquee"  CacheMode="BitmapCache"/>
    </Canvas>
</UserControl>
