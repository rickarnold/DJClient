<UserControl x:Class="DJClientWPF.QueueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="LabelSinger" Content="Rick Arnold" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"/>
        
        <Border  VerticalAlignment="Bottom" Height="2" Margin="10,0,10,0" BorderBrush="Silver"/>
        
        <Label x:Name="LabelSong" Content="Rage Against The Machine - Bulls On Parade" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14"
               Margin="15,0,0,0" FontStyle="Italic"/>
    </Grid>
</UserControl>
